<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/toolbarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/toolbarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorPrimaryDarkTrans</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomAppCompatFullscreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeDetailsScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ThemeStatusBarTransparent" parent="AppThemeDetailsScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="ThemeOverlay.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@drawable/generic_focus_variation_white_grey</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorGrey</item>
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="TextInputLayoutStyleLogin" parent="ThemeOverlay.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@drawable/generic_focus_variation_blackmat_grey</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorGrey</item>
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorMaterialBlack</item>
    </style>

    <style name="SwitchStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorGrey</item>
        <item name="colorSwitchThumbNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="FacebookLoginButton">FbLoginButtonStyle>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginStart">@dimen/fb_login_btn_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/fb_login_btn_margin_start</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="GoogleLoginButton">FbLoginButtonStyle>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginStart">@dimen/gl_login_btn_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/gl_login_btn_margin_start</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MyCheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlackDimText</item>
        <item name="colorControlActivated">@color/greenStatus</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogAnimHelp">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_fall_down</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_go_up</item>
    </style>

    <style name="linkWhiteButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/generic_press_variation_blue_darkblue</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/generic_press_variation_blue_darkblue</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorBlackDimText</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

</resources>
